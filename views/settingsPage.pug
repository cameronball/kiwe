extends layouts/main-layout.pug

block content
	.settingsContainer
		button(data-toggle="modal" data-target="#changeNameModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-signature")
				span Change name
	.settingsContainer
		button(data-toggle="modal" data-target="#changeUsernameModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-user")
				span Change username
	.settingsContainer
		button(data-toggle="modal" data-target="#changeEmailModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-at")
				span Change email
	.settingsContainer
		button(data-toggle="modal" data-target="#changeBioModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-edit")
				span Change bio
	.settingsContainer
		button(data-toggle="modal" data-target="#imageUploadModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-user-circle")
				span Change profile picture
	.settingsContainer
		button(data-toggle="modal" data-target="#coverPhotoUploadModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-images")
				span Change profile cover photo
	.settingsContainer
		button(data-toggle="modal" data-target="#changePasswordModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-key")
				span Change password
	.settingsContainer
		a(href="/legal" style="text-decoration: none;padding-left:6px;")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-balance-scale")
				span Legal
	.settingsContainer
		a(href="/twofactor/setup", style="text-decoration: none;padding-left:6px;")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-user-lock")
				span 2FA
	if userLoggedIn.admin
		.settingsContainer
			a(href="/admin" style="text-decoration: none;")
				.resultListItem(class="settingsListItem")
