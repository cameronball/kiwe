	.settingsContainer
		button(data-toggle="modal" data-target="#deleteAccountModal")
			.resultListItem(class="settingsListItem")
				.resultsImageContainer
					i(class="fas fa-user-slash")
				span Delete account
	
	+createSettingsModals(userLoggedIn)
	+createImageUploadModal()
