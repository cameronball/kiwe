extends layouts/main-layout.pug

block content

	// If searchTerm is provided in the URL, then create a hidden div with the searchTerm in it
	- if (selectedTab == "users" && searchTerm) {
		.searchTermContainer(data-search="#{searchTerm}")
	- }

	.searchBarContainer
		i.fas.fa-magnifying-glass
		input#searchBox(type="text", name="searchBox", data-search=selectedTab, placeholder="Search...")

	.tabsContainer
		+createTab("Posts", `/search/posts`, selectedTab != "users")
		+createTab("Users", `/search/users`, selectedTab == "users")

	.resultsContainer

	+createPostModals(userLoggedIn)

block scripts
	script(src="/js/search.js")