extends layouts/main-layout.pug

block content
  .tabsContainer
    +createTab("Following", `/home`, selectedTab != "trending")
    +createTab("Trending", `/home/trending`, selectedTab == "trending")
+createPostForm(userLoggedIn)
  +createImagePostUploadModal(userLoggedIn)
  +createCodeUploadModal(userLoggedIn)
  .postsContainer

  +createPostModals(userLoggedIn)

block scripts
  script(src="/js/home.js")
